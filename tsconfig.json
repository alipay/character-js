{
  "compilerOptions": {
    "target": "ES5",
    "module": "ES6",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "declaration": true,
    "noImplicitThis": true,
    "types": ["node"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "types": [
    "node",
    "mocha"
  ]
}